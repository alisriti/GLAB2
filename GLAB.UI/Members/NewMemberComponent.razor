@using Microsoft.AspNetCore.Components.Forms
<EditForm Model=@memberModel OnValidSubmit=@createMember>
    <DataAnnotationsValidator />
    
    <MyCard Title="Nouveau Membre" CancelLabel="Annuler" SubmitLabel="Enregistrer">
        <CardBody>
            @if (hasError)
            {
                <div class="alert alert-warning">
                    @errorMessage
                </div>
            }
            <ValidationSummary />
            <div>
                <label>Nom</label>
                <input class="form-control" @bind=@memberModel.Nom />
            </div>
            <div>
                <label>Prénom</label>
                <input class="form-control" @bind=@memberModel.Prenom />
            </div>

            <div>
                <label>Email </label>
                <input class="form-control" @bind=@memberModel.Email />
            </div>
            <div>
                <label>Equipe</label>
                <input class="form-control" @bind=@memberModel.Equipe />
            </div>
        </CardBody>
    </MyCard>
</EditForm>